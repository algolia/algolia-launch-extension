{
  "displayName": "Algolia Search Insights",
  "name": "algolia",
  "platform": "web",
  "version": "1.2.0",
  "description": "Forward events to Algolia to drive better personalization and recommendation.",
  "author": {
    "name": "Algolia"
  },
  "viewBasePath": "dist/",
  "iconPath": "resources/icons/algolia.svg",
  "configuration": {
    "viewPath": "configuration/configuration.html",
    "schema": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "appId": {
          "type": "string"
        },
        "apiKey": {
          "type": "string"
        },
        "indexName": {
          "type": "string"
        }
      },
      "required": [
        "appId",
        "apiKey",
        "indexName"
      ]
    }
  },
  "actions": [
    {
      "displayName": "Load Insights",
      "name": "load-insights",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {}
      },
      "libPath": "src/lib/actions/loadInsights.js"
    },
    {
      "displayName": "Clicked after Search",
      "name": "clicked-after-search",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "itemDataElement": {
            "type": "string"
          },
          "userTokenDataElement": {
            "type": "string"
          },
          "eventName": {
            "type": "string"
          }
        },
        "required": [
          "itemDataElement",
          "userTokenDataElement",
          "eventName"
        ]
      },
      "libPath": "src/lib/actions/clickedAfterSearch.js",
      "viewPath": "actions/clickedAfterSearch.html"
    },
    {
      "displayName": "Convert after Search",
      "name": "convert-after-search",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "itemDataElement": {
            "type": "string"
          },
          "userTokenDataElement": {
            "type": "string"
          },
          "eventName": {
            "type": "string"
          }
        },
        "required": [
          "itemDataElement",
          "userTokenDataElement",
          "eventName"
        ]
      },
      "libPath": "src/lib/actions/convertAfterSearch.js",
      "viewPath": "actions/convertAfterSearch.html"
    }
  ],
  "dataElements": [
    {
      "displayName": "DataSet",
      "name": "dataset",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {
          "querySelector": {
            "type": "string"
          }
        },
        "required": [
          "querySelector"
        ]
      },
      "libPath": "src/lib/dataElements/dataset.js",
      "viewPath": "dataElements/dataset.html"
    },
    {
      "displayName": "Query String",
      "name": "query-string",
      "schema": {
        "$schema": "http://json-schema.org/draft-04/schema#",
        "type": "object",
        "properties": {}
      },
      "libPath": "src/lib/dataElements/queryString.js"
    }
  ]
}
